            </ul>
            </div>
        </div>
        @{Html.RenderAction("CourseMenu", "Platform");}
        <div id="main" >
            @RenderBody()
        </div>
        <div id="footer">
            built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
        </div>
    </div>
</body>
</html>
