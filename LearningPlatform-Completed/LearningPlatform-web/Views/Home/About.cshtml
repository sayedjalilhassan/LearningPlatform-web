@model IEnumerable<LearningPlatform.ViewModels.CourseEnrollmentsGroup>
@{
    ViewBag.Title = "Student Body Statistics";
}
<h2>
    Student Body Statistics</h2>
<table>
    <tr>
        <th>
            Course Name
        </th>
        <th>
            Students
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @String.Format("{0:d}", item.CourseName)
            </td>
            <td>
                @item.StudentCount
            </td>
        </tr>
    }
</table>
